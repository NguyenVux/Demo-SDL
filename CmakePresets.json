{
  "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
  "version": 10,
  "configurePresets": [
    {
      "name": "sdl2-native",
      "displayName": "SDL2 Native Base",
      "binaryDir": "build/sdl2",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "D:/personal/dev"
      },
      "architecture": {
        "value": "x64"
      }
    },
    {
      "name": "emscripten",
      "displayName": "Emscripten Base",
      "binaryDir": "build/emscripten",
      "generator": "Ninja Multi-Config",
      "toolchainFile": "emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {}
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "displayName": "Debug",
      "configurePreset": "sdl2-native",
      "configuration": "Debug"
    },
    {
      "name": "Release",
      "configurePreset": "sdl2-native",
      "displayName": "Release",
      "configuration": "Release"
    }
  ]
}
