{
  "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
  "version": 10,
  "configurePresets": [
    {
      "name": "sdl2-native",
      "displayName": "SDL2 Native Base",
      "binaryDir": "build",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "D:/personal/dev",
		"CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "emscripten",
      "displayName": "Emscripten Base",
      "binaryDir": "build",
      "generator": "Ninja Multi-Config",
      "toolchainFile": "emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {}
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "displayName": "Debug"
    },
    {
      "name": "Release",
      "displayName": "Release"
    },
    {
      "name": "Native Debug",
      "inherits": ["Debug"],
      "configurePreset": "sdl2-native"
    },
    {
      "name": "Native Release",
      "inherits": ["Release"],
      "configurePreset": "sdl2-native"
    },
    {
      "name": "Emscripten Debug",
      "inherits": ["Debug"],
      "configurePreset": "emscripten"
    },
    {
      "name": "Emscripten Release",
      "inherits": ["Release"],
      "configurePreset": "emscripten"
    }
  ]
}
